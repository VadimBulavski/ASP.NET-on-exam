@model DomainObject.Race
@{
    ViewBag.Title = "Create Race";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Race</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new{ @class = "raceName" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Distance, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Distance, new{ @class = "distance" })
                @Html.ValidationMessageFor(model => model.Distance)
            </div>
        </div>

        <div class="form-group">
            <div id="create" class="col-md-offset-2 col-md-10">
                <input type="submit" name="action" value="Create" id ="createRace" class="btn btn-default" />
            </div>
        </div>

        @if (Model != null && Html.ViewData.ModelState.IsValid)
        {
            <div class="form-group">
                @Html.ActionLink("Add Car", "CreateCar", new { controller = "Admin", area = "Admin", id = Model.RaceID })
            </div>
            <div>
                @if (Model.Cars != null)
                {
                    foreach (var item in Model.Cars)
                    {
                        <table class="table">
                            <tr class="row">

                                <td class="col-lg-2" style="background-color:blue; color:white; font-size:14pt">
                                    <input type="button" id="DetailButton" value="@Html.DisplayFor(itemModel => item.NameCar)" />
                                    <input type="hidden" id="carId" value="@Html.DisplayFor(itemModel => item.CarID)" />
                                    @*<div id="hide" onclick="showDetails">
                                @Html.DisplayFor(itemModel => item.NameCar)
                            </div> *@
                                </td>
                                <td class="col-lg-10" style="background-color:grey">
                                    <div style="background-color:orange; width:100%; position:relative;
                                                color:white; font-size:14pt; text-align:left">
                                        Distance:
                                        @Html.DisplayFor(itemModel => item.Distance) km
                                    </div>
                                </td>
                            </tr>
                        </table>
                        <div id="details" style="display: none">

                        </div>
                    }
                }

               @** @Html.Partial("ListOfCars", Model) *@
            </div>
        }


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="action" value="Start Race" class="btn btn-default" />
            </div>
        </div>
    </div>
    
    @section scripts
{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")

    <script type="text/javascript">
        $(function () {
            //$("#dialog").dialog({
            //    autoOpen: false,
            //    modal: true,
            //    title: "View Details"
            //});
            $("#DetailButton").click(function () {
                var carId = $("#carID").eq(0).html(); //$(this).closest("tr").find("td").eq(0).html();
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DetailsCar", "Admin", new {Area = "Admin"})',//"Admin/Admin/Details",
                    data: '{carId: "' + carId + '" }',
                    contentType: "application/json; charset=utf-8",
                    dataType: "html",
                    success: function (response) {
                        $('#details').html(response);
                        //$('#dialog').dialog('open');
                        $('#details').toggle();
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            });
        });
    </script>
}

}

